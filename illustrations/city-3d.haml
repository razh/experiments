!!! 5
%html(lang="en")
  %head
    %meta(charset="UTF-8")
    %title City 3D

    %link(rel="stylesheet" href="./stylesheets/city-3d.css")
  %body
    - def faces(directions)
    -   directions.each do |direction|
    -     haml_tag :div, :class => ['face', direction] end
    - end;

    - def box; faces(['top', 'bottom', 'back', 'front', 'left', 'right']) end

    - def building; faces(['top', 'back', 'front', 'left', 'right']) end

    - def building_edged_roof
    -  building
    -  faces(['front-top', 'back-top', 'left-top', 'right-top'])
    -  faces(['front-interior', 'back-interior', 'left-interior', 'right-interior'])
    - end;

    .container
      %button.rotate.rotateX Rotate X
      %button.rotate.rotateY Rotate Y

      .building-test
        - box

    .scene.buildings
      - (1..16).each do |i|
        .building
          - box
      .ground
        - box

    .scene.building-sans-bottom
      .building
        - building
      .building-edged-roof
        - building_edged_roof

