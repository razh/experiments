!!! 5
%html(lang="en")
  %head
    %meta(charset="UTF-8")
    %title City 3D

    %link(rel="stylesheet" href="./stylesheets/city-3d.css")
  %body
    - def faces
    -   ['top', 'bottom', 'back', 'front', 'left', 'right'].each do |direction|
    -     haml_tag :div, :class => ['face', direction] end
    - end;

    .container
      %button.rotate.rotateX Rotate X
      %button.rotate.rotateY Rotate Y

      .building-test
        - faces

    .scene.buildings
      - (1..16).each do |i|
        .building
          - faces
      .ground
        - faces
