!!! 5
%html(lang="en")
  %head
    %meta(charset="UTF-8")
    %title Hand 3D

    %link(rel="stylesheet" href="./stylesheets/hand-3d.css")
  %body
    - def faces
    -   ['top', 'bottom', 'back', 'front', 'left', 'right'].each do |direction|
    -     haml_tag :div, :class => ['face', direction] end
    - end;

    - def finger
    -   haml_tag :div, :class => 'metacarpal' do faces
    -     haml_tag :div, :class => 'proximal' do faces
    -       haml_tag :div, :class => 'middle' do faces
    -         haml_tag :div, :class => 'distal' do faces end
    -       end;
    -     end;
    -   end;
    - end;

    - def thumb
    -   haml_tag :div, :class => 'metacarpal' do faces
    -     haml_tag :div, :class => 'proximal' do faces
    -       haml_tag :div, :class => 'distal' do faces end
    -     end;
    -   end;
    - end;

    .scene
      .hand.body
        .wrist
          - faces
          .thumb
            - thumb
          .index.finger
            - finger
          .middle.finger
            - finger
          .ring.finger
            - finger
          .small.finger
            - finger

    %script(src='./js/robot-3d.js')
