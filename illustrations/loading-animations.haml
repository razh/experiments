!!! 5
%html(lang="en")
  %head
    %meta(charset="UTF-8")
    %title Animations

    %link(rel="stylesheet" href="./stylesheets/loading-animations.css")
  %body
    .animation#animation-00
      .circle#inner
      .circle#outer
      .counter 0

    .animation#animation-01
      -(1..5).each do |i|
        .row
          -(1..4).each do |j|
            .box

    .animation#animation-02
      .counter 0
      .circle#inner
      %svg
        %path(d="m -150, 0 a 150,150 0 1,0 300,0 a 150,150 0 1,0 -300,0")
    %script(src="./js/loading-animations.js")


