@import 'nib'

gutter-width = 16px
border-radius = 4px

*, *:before, *:after
  box-sizing border-box

body
  margin 0
  background-color #223

// Grid system.
.row
  clearfix()
  margin-left -(gutter-width / 2)
  margin-right -(gutter-width / 2)
  margin-bottom gutter-width

  &:last-child
    margin-bottom 0

$col
  position relative
  float left
  margin 0
  padding-left (gutter-width / 2)
  padding-right (gutter-width / 2)

for i in (1..12)
  .col-{i}
    @extends $col
    width (100% * i / 12)

// Content.
.layout
  padding gutter-width
  margin 32px auto
  width 320px
  background-color #e86
  border-radius border-radius

.header
.footer
.sidebar
.main
  background-color #eca
  border-radius border-radius

.header
.footer
  height 32px

.sidebar
.main
  height 128px
