@import 'nib'

html,
body
  height 100%

body
  margin 0
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

.container
  display flex
  width 100%
  height 100%

.palettes
  display flex
  height 100%


.color
  flex 8 auto

.add-palette-btn
  position absolute

  left 1em
  bottom @left

  width 32px
  height @width

  background-color #000
  color #fff

  border none
  margin 0
  padding 0

  font-size 16px

  &:active
    background-color #fff
    color #000

@keyframes expand
  0%
    max-height 0

  100%
    max-height 100%

.palette
  display flex
  flex-direction column
  height 100%

  .rect
    width 64px
    flex auto
    animation expand 0.2s forwards
    box-shadow 0 0 8px rgba(#000, 0.2)

    &:hover:after
      content attr(data-background-color)

      position absolute

      height 1.5em
      line-height @height

      white-space nowrap
      padding 0.5em 1em

      background-color rgba(#000, 0.5)
      color #fff

      box-shadow 0 0 8px rgba(#000, 0.5)


.hsl
  position absolute
  bottom 1em

  width 100%

  color white
  text-align center
  text-shadow 0 0 0.5em rgba(#000, 0.5)
